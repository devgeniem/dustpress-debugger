{
    "manifest_version": 3,
    "name": "dustpress-debugger",
    "description": "Provides handy ajaxified debugger tool for DustPress based themes.",
    "version": "1.0.0",
    "devtools_page": "index.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "cookies"
    ]
}
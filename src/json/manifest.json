{
    "manifest_version": 3,
    "name": "dustpress-debugger",
    "description": "Provides handy ajaxified debugger tool for DustPress based themes.",
    "version": "1.0.0",
    "devtools_page": "devtools_page.html",
    "background": {
        "service_worker": "background.js"
    },
    "optional_permissions": [
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "https://*/"
    ],
    "permissions": [
        "tabs"
    ]
}